<div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4 col-md-offset-4">
          <p style="padding:40px;"></p>

          <div class="well">

            <h2 class="text-center">申请注册</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :email, label: "邮箱", required: true, autofocus: true %>
                <%= f.input :password, label: "密码", required: true, hint: ("不少于 #{@minimum_password_length} 位" if @minimum_password_length) %>
                <%= f.input :password_confirmation, label:"确认密码", required: true %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "注册" %>
                <span class="btn pull-right">
                  <%= render "devise/shared/links" %>
                </span>
              </div>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
  <p style="padding:200px;"></p>
</div>
