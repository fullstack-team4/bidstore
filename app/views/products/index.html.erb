<html>
  <head>
    <title> 大咖私藏 </title>
  </head>

    <body>
<!-- 以下为主干 -->
      <div class="container-fluid">
              <!-- left sidebar -->
          <div class="container">
            <ol class="breadcrumb ">
              <li><%= link_to("网红", products_path(tag:"netceleb")) %> </li>
              <li><%= link_to("明星", products_path(tag:"movieceleb")) %> </li>
              <li><%= link_to("健将", products_path(tag:"sportceleb")) %> </li>
            </ol>
            <div class="row">
              <% @products.each do |product| %>
                <div class="col-xs-6 col-md-3">
                  <p style="padding:20px;"></p>

                    <%= link_to product_path(product) do %>
                      <% if product.photos.present? %>
                        <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
                      <% else %>
                        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                      <% end %>
                    <% end %>
                      <%= product.title %> ￥ <%= product.price %>
                        <div class="button"><%= link_to("收藏", favor_product_path(product), :method => :post, :class => "btn btn-primary btn-sm") %></div>
                </div>

              <% end %>
            </div>
          </div>
        </div>
    </body>
  <!-- 以上为主干图片-->
</html>
