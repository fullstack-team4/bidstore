
<html>
  <head>
    <title> 大咖私藏 </title>
      <%#= csrf_meta_tags %>

      <%#= stylesheet_link_tags 'application', media:'all', 'data-turbolinks-track': 'reload' %>
      <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
<!-- 以下为主干 -->
<div class="carousel-inner" role="listbox">

      <div class="container-fluid">
          <%#= render "common/navbar" %>
          <%#= render "common/flashes" %>

          <div class="row content">
            <div class="col-md-2 sidebar " id="myScrollspy" >
              <!-- left sidebar -->
              <ul class="nav nav-pills nav-stacked" data-spy="affix">
                <li><%= link_to("网红", products_path(tag:"netceleb"), :class => "btn btn-primary btn-sm") %> </li>
                <li><%= link_to("明星", products_path(tag:"movieceleb"), :class => "btn btn-primary btn-sm") %> </li>
                <li><%= link_to("健将", products_path(tag:"sportceleb"), :class => "btn btn-primary btn-sm") %> </li>
              </ul>
            </div>

            <div class="col-md-10" >
              <div class = "row">
                <h2 align="center"> 大咖私藏 </h2>
                <p style="padding:10px;"></p>
              </div>
            </div>
          <div class="container">
            <div class="row">
              <% @products.each do |product| %>
                <div class="col-xs-6 col-md-3">
                  <%= link_to product_path(product) do %>
                    <% if product.image.present? %>
                      <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                    <% else %>
                      <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                    <% end %>
                  <% end %>
                  <%= product.title %> ￥ <%= product.price %>
                    <div class="button"><%= link_to("收藏", favor_product_path(product), :method => :post, :class => "btn btn-primary btn-sm") %></div>
                </div>
              <% end %>
            </div>

          </div>
