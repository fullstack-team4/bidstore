<div class="container">

  <!--面包屑-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to("全部", products_path) %> </li>
    <li class="breadcrumb-item"><%= link_to("网红", products_path(tag:"netceleb")) %> </li>
    <li class="breadcrumb-item"><%= link_to("明星", products_path(tag:"movieceleb")) %> </li>
    <li class="breadcrumb-item"><%= link_to("健将", products_path(tag:"sportceleb")) %> </li>
  </ol>

  <!--标题-->
  <div class = "row">
    <h2 align="center"> 大咖私藏 </h2>
    <p style="padding:10px;"></p>
  </div>
</div>

<!--产品loop显示，含价格与收藏按键-->
  <div class="cards-row">
    <div class="container">
      <div class="row">
<!-- 产品图片，名称，价格 -->
        <% @products.each do |product| %>
          <div class="col-xs-6 col-lg-3" style="height: 450px; ">
            <div class="card">
              <div class="card-header">
                <%= link_to product_path(product) do %>
                  <% if product.photos.present? %>
                    <%= image_tag(product.photos[0].avatar.thumb.url) %>
                  <% else %>
                    <%= image_tag("http://placehold.it/200x200&text=No Pic" ) %>
                  <% end %>
                <% end %>
              </div>
              <div class="caption">
                  <div><%= product.title %></div>
                  <div>￥<%= product.price %></div>
                <div class="btn-favor">
                  <%= link_to("收藏宝贝", favor_product_path(product), :method => :post, :class => " btn-primary btn-sm") %>
                  <%= link_to("查看产品", product_path(product), :method => :get, :class => " btn-danger btn-sm") %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

    </div>
  </div>
</div>
<p style="padding:105px;"></p>

