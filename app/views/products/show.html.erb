<!--header start-->
<header>
  <section class="add-sm-h-padding">
    <br>
    <br>
  <h2 class="container text-center"> <%= @product.title %> </h2>
    <br>
    <br>
  </section>
</header>
<!--header finished-->

<section>
  <div class="container-fluid">
<!-- 左侧 上部 产品图片-->
    <div class="row" >
      <div class="col-md-6">
        <div class="row "><!--左侧-->
          <div>
          <% if @photos.present? %>
            <% @photos.each_with_index do |p, index| %>
              <% if index == 0 %>
                <%= image_tag p.avatar.medium.url %>
              <% else %>
                <%= image_tag p.avatar.thumb.url %>
              <% end %>
            <% end %>
            <% else %>
              <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
          <% end %>
        </div>
          <!-- 左侧 中部 产品故事-->
        <div class="text-center">
          <%= @product.product_story %>
        </div>
      </div>
    </div>
  <!--左侧结束-->
        <!-- 右侧 信息与按钮-->
  <div class="col-md-6 ">
    <div class="text-center add-sm-h-padding right1">
      <h3><%= @product.description %></h3>
    </div>

    <div class="row">
      <div class="col-md-6 right2">
        <p> 一口价 : ¥<%= @product.buyout %> </p>
        <p> 底价 : ￥<%= @product.price %> </p>
      </div>

      <div class="col-md-6 right2"><!-- <div align="left"> -->
        <% begin_time = @product.begintime.strftime("%Y/%m/%d %H:%M") %>
        <% end_time = @product.endtime.strftime("%Y/%m/%d %H:%M") %>
        <p>起拍 : <%= begin_time %></p>

        <p>结束 : <%= end_time %> </p>
      </div>

    <br><br>
    <div class="col-md-offset-2 col-md-8 col-md-offset-2">
      <div class="countdownpanel" style="display:center">
        <% t = Time.now %>
        <% if t < @product.begintime %>
        <p>
          <% begin_time = @product.begintime.strftime("%Y/%m/%d %H:%M:%S") %>
            <div align="center" >
              <h3>距拍卖开始</h3>
              <h2>
              <div id="getting-started-1"></div>
                <script type="text/javascript">
                    var BeginTime = <%= begin_time.to_json.html_safe %>
                      $("#getting-started-1")
                     .countdown(BeginTime, function(event) {
                       $(this).text(event.strftime('%D D %H:%M:%S')
                         );
                       });
                </script>
              </h2>
            </div>
          </p>
            <% elsif @product.begintime < t && t < @product.endtime %>
         <p>
           <% end_time = @product.endtime.strftime("%Y/%m/%d %H:%M:%S") %>
            <div align="center">
              <h3>离结束还有</h3>
              <h2>
              <div id="getting-started"></div>
              <script type="text/javascript">
               var EndTime = <%= end_time.to_json.html_safe %>
               $("#getting-started")
               .countdown(EndTime, function(event) {
                 $(this).text(
                   event.strftime('%D天:%H时:%M分:%S秒')
                 );
               });
              </script>
              </h2>
            </div>
         </p>
         <% elsif @product.endtime < t %>
         <p>拍卖已结束</p>
          <% end %>
          <% if t > @product.endtime %>
            <p></p><!--拍卖结束-->
            <% else %>
            <% if t < @product.begintime %>
            <p>尚未开始</p>
            <% else %>
            <div style="display:center">
              <%= link_to new_product_bid_path(@product) do %>
              <button class="btn btn-primary btn-lg btn-center btn-danger">参加拍卖</button>
              <% end %>
            </div>
          <% end %>
          <% end %>
        </div>
        <br><br>
    </div>

     <div class = "row">
       <div class="col-md-6" style="display:center">
          <%= link_to("查看所有出价", product_bids_path(@product), :method => :get, :class => "btn btn-primary btn-lg")%>
        </div>
        <div class="col-md-6" style="display:center">
          <%= link_to("加入收藏夹", favor_product_path(@product), :method => :post, :class => "btn btn-primary btn-lg") %>
        </div>
    </div>
  </div>
</div>
</div>
</div>
</section>
<p style="padding:70px;"></p>
