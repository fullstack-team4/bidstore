  <div class="container">
    <div class="show1">
      <br><br>
    <div class="row">
      <h2 align="center"> <%= @product.title %> </h2>
    </div>
    <br>
    <div class="well">
      <div class="row" >

        <!-- 左侧 上部 产品图片-->
        <div class="col-md-6">
          <% if @photos.present? %>
            <% @photos.each_with_index do |p, index| %>
              <% if index == 0 %>
                <%= image_tag p.avatar.medium.url %>
              <% else %>
                <%= image_tag p.avatar.thumb.url %>
              <% end %>
            <% end %>
          <% else %>
            <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
          <% end %>
        </div>

        <!-- 左侧 中部 产品故事-->
          <div class="col-md-6"><br>
            <div class="showbackground">
              <div align="left">
                <h4><%= @product.description %></h4>
              </div>
            <div>
              <h5>
                一口价 : ¥<%= @product.buyout %><br>
                底价 :   ￥<%= @product.price %>
              </h5>
            </div>
          </div>
        </div>
      <div class="row">
       <div align="left">
         <div class="col-md-6"><br>
           <div class="showbackground">
             <div align="left">
                <% begin_time = @product.begintime.strftime("%Y/%m/%d %H:%M") %>
                <% end_time = @product.endtime.strftime("%Y/%m/%d %H:%M") %>
                  <p><h4>起拍 : <%= begin_time %></h4> </p>
                  <p><h4>结束 : <%= end_time %> </h4></p>
              </div>
            </div>
          </div>
          <br>
          <div align="left">
            <div class="col-md-6">
              <div class="show2">

              <button type="button">
               <!-- <div class="showbackground"> -->
               <% t = Time.now %>
                 <% if t < @product.begintime %>
                   <p>
                     <% begin_time = @product.begintime.strftime("%Y/%m/%d %H:%M:%S") %>
                     <div align="center" >
                       <h3>距拍卖开始</h3>
                       <h2>
                       <div id="getting-started-1"></div>
                       <script type="text/javascript">
                         var BeginTime = <%= begin_time.to_json.html_safe %>
                         $("#getting-started-1")
                         .countdown(BeginTime, function(event) {
                           $(this).text(
                             event.strftime('%D D %H:%M:%S')
                           );
                         });
                       </script>
                     </h2>
                   </div>
                   </p>
                    <% elsif @product.begintime < t && t < @product.endtime %>
                   <p>
                     <% end_time = @product.endtime.strftime("%Y/%m/%d %H:%M:%S") %>

                    <div align="center">
                      <% if @product.aasm_state == "sold" %>
                        <span>拍卖已结束</span>
                      <% else %>
                        <h3>离结束还有</h3>
                        <h2>
                        <div id="getting-started"></div>
                        <script type="text/javascript">
                         var EndTime = <%= end_time.to_json.html_safe %>
                         $("#getting-started")
                         .countdown(EndTime, function(event) {
                           $(this).text(
                             event.strftime('%D天:%H时:%M分:%S秒')
                           );
                         });
                        </script>
                        </h2>
                      <% end %>
                    </div>

                   </p>
                    <% elsif @product.endtime < t %>
                   <p>拍卖已结束</p>
                 <% end %>
                 <!-- </div> -->
               </button>
             <!-- </div> -->

           </div>
          </div>
         </div>
             <br><br><br>

           </div>
         </div>
       </div>
     </div>
    </div>
  </div>





     <div class = "container">
       <div class="col-md-5">
         <div class="product_story">
           <p><%= @product.product_story %></p>
         </div>
       </div>
       <div class="col-md-6">
         <div align="right">
           <%= link_to("查看所有出价", product_bids_path(@product), :method => :get, :class => "btn btn-primary btn-lg")%>
           <%= link_to("加入收藏夹", favor_product_path(@product), :method => :post, :class => "btn btn-primary btn-lg") %>
           <% if t > @product.endtime %>
             <button type="button" class="btn btn-info">拍卖结束</button>
           <% else %>
             <% if t < @product.begintime %>
               <button type="button" class="btn btn-info">尚未开始</button>
             <% else %>
             <% if @product.aasm_state == "sold" %>
               <span>拍卖已结束</span>
             <% else %>
               <div class="group">
                 <%= link_to("参加拍卖", new_product_bid_path(@product), :method => :get, :class => "btn btn-primary btn-lg btn-danger")%>
               </div>
             <% end %>
            <% end %>
          <% end %>
          </div>
       </div>
     </div>
<p style="padding:70px;"></p>
