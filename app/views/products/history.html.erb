<h1>历史拍卖纪录</h1>
<br>
<div class="row">
<% @products.each do |product| %>
  <div class="col-xs-6 col-md-3" style="height: 450px;">
    <div class="thumbnail">
      <%= link_to product_path(product) do %>
        <% if product.photos.present? %>
          <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail pic-in-card") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail pic-in-card") %>
        <% end %>
      <% end %>
      <div class="caption">
        <h4>
            <div><%= product.title %></div>
        </h4>
        </div>
      </div>
    </div>
  <% end %>
</div>
