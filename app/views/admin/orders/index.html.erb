<h1>所有订单</h1>
<br><br>
<table class="table">
    <thead>
        <tr>
            <th>
                订单编号
            </th>
            <th>
                生成时间
            </th>
            <th>
                用户邮件
            </th>
            <th>
                订单状态
            </th>
            <th>
                订单状态控制
            </th>
        </tr>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td>
                    <%= link_to(order.id, admin_order_path(order) ) %>
                    <%#= link_to(order.id, order_path(order.token)) %>
                </td>
                <td>
                    <%= order.created_at.to_s(:short) %>
                </td>
                <td>
                    <%= order.user.email %>
                </td>
                <td>
                    <%= order.aasm_state %>
                </td>
                <td>
                    <%= render "admin/orders/state_option", order: order %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

<div class="text-center">
  <%= will_paginate@bids,renderer: BootstrapPagination::Rails %>
</div>
