<h1 class="text-center">我的收藏</h1>
<br><br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>商品</th>
      <th>起拍价格</th>
      <th>创建时间</th>
      <th>更新时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.participated_products.each do |product| %>
    <tr>
      <td>#</td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.begintime %></td>
      <td><%= product.aasm_state %></td>
      <td><%= link_to("取消收藏", quit_product_path(product), :method => :post, :class => "btn btn-primary btn-lg btn-danger")%></td>
    </tr>
    <% end %>
  </tbody>
</table>
