<h1 class="text-center">我的订单</h1>
<br><br>
<table class="table">
        <thead>
            <tr>
                <th>订单编号</th>
                <th>是否付款</th>
                <th>付款方式</th>
                <th>订单状态</th>
                <th>更新时间</th>
                <th>操作</th>
            </tr>
        </thead>

        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td>
                    <%= link_to(order.id, order_path(order.token)) %>
                </td>
                <td>
                    <% if order.is_paid %>
                    <%= "已付款" %>
                <% else %>
                    <%= "未付款" %>
                    <% end %>
                </td>
                <td>
                    <%= order.payment_method %>
                </td>
                <td>
                    <%= order.aasm_state %>
                </td>
                <td>
                    <%= order.updated_at.to_s(:short) %>
                </td>
                <td>
                    <%= render "account/orders/state_option", order: order %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </h5>
</table>

  <div class="text-center">
    <%= will_paginate@bids,renderer: BootstrapPagination::Rails %>
  </div>
