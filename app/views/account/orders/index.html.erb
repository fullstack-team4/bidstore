<h1 class="text-center">我的订单</h1>
<div class="container">

  <div class="col-md-11 col-offset-1">
      <p style="padding:20px;"></p>
        <% if !current_user.orders.present? %>
          <p style="padding:20px;"></p>
          <span class="biaotou pull-left">尚无订单记录，参与竞价订购吧</span>
        <% else %>
          <table class="table table-striped ">
            <thead class = "biaotou">
              <tr>
                  <th width="10%">编号</th>
                  <th with="25">
                    商品
                  </th>
                  <th width="10%">付款</th>
                  <th width="10%">方式</th>
                  <th width="15%">订单状态</th>
                  <th width="20%">更新时间</th>
                  <th width="15%">商品状态</th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <%= link_to(order.id, order_path(order.token)) %>
                  </td>
                  <td>
                    <%= order.product_lists.first.product.title %>
                  </td>
                  <td>
                    <% if order.is_paid %>
                      <%= "已付款" %>
                    <% else %>
                      <%= "未付款" %>
                    <% end %>
                  </td>
                  <td>
                    <%= order.payment_method %>
                  </td>
                  <td>
                    <%= order.aasm_state %>
                  </td>
                  <td>
                    <%= order.created_at.to_s(:short) %>
                  </td>
                  <td>
                    <%= render "account/orders/state_option", order: order %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% end %>
    </div>

    <div class="text-center">
      <%= will_paginate@orders,renderer: BootstrapPagination::Rails %>
    </div>
</div>
